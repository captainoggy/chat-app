{{#if (gt @channel.tracking.unreadCount 0)}}
  <div
    class={{concat-class
      "chat-channel-unread-indicator"
      (if
        (or
          @channel.isDirectMessageChannel (gt @channel.tracking.mentionCount 0)
        )
        "urgent"
      )
    }}
  >
    <div class="number">{{@channel.tracking.unreadCount}}</div>
  </div>
{{/if}}